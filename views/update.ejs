<form method="post" action="/updateData" enctype="multipart/form-data">
    <input type="hidden" name="EditId" value="<%=stUpdate.id%>">
    <table border="1">
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" value="<%=stUpdate.name%>"></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><input type="text" name="age" value="<%=stUpdate.age%>"></td>
        </tr>
        <tr>
            <td>Gender</td>
            <td><input type="radio" name="gender" value="Male" <%if(stUpdate.gender == 'Male'){%> <%='checked'%> <%}%>>Male
                <input type="radio" name="gender" value="Female" <%if(stUpdate.gender == 'Female'){%> <%='checked'%> <%}%>>Female
            </td>
        </tr>
        <tr>
            <td>Gender</td>
            <td><input type="checkbox" name="hobby" value="Reading" <%if(stUpdate.hobby.includes('Reading')){%> <%='checked'%> <%}%>>Reading
                <input type="checkbox" name="hobby" value="Music" <%if(stUpdate.hobby.includes('Music')){%> <%='checked'%> <%}%>>Music
                <input type="checkbox" name="hobby" value="Adventure" <%if(stUpdate.hobby.includes('Adventure')){%> <%='checked'%> <%}%>>Adventure
            </td>
        </tr>
        <% var city =["Surat","Ahemdabad","Vadodara","Rajkot"]%>
        <tr>
            <td>Select City</td>
            <td>
                <select name="city">
                    <option value="0">---Select City---</option>
                    <%city.map((v)=>{%>
                        <option value="<%=v%>"<%if(stUpdate.city==v){%><%='selected'%> <%}%>><%=v%></option>
                    <%})%>
                </select>
            </td>
        </tr>
        <tr>
            <td>Upload Image</td>
            <td style="display: flex; justify-content: center; align-items: center;"><input type="file" name="avtar">
                <img src="<%=stUpdate.avtar%>" height="60px">
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="submit" value="Edit Data"></td>
        </tr>
    </table>
</form>